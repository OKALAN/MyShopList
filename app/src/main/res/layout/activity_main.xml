<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_brown"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:text=" Ma liste de courses" android:layout_marginStart="52dp"
                android:layout_alignStart="@+id/imageButton"/>
        <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/icon_state"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_assignment_white_24dp" android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"/>


    </RelativeLayout>


    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/light_grey"
            android:textSize="18dp"
            android:text="no shopping list" />


    <ListView
            android:id="@+id/listview"
            android:layout_below="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnCreate"
            android:layout_centerHorizontal="true" tools:ignore="UnknownId"/>

    <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_coklat"
            android:textColor="@color/light_grey"
            android:textSize="20dp"
            android:text="CREATE A SHOPPING LIST" />




</RelativeLayout>